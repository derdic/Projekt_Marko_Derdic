@model List<Adidas>
@{ ViewBag.Title = "Proizvodi Adidas"; }

<h1>Proizvodi Adidas</h1>
<br />
<div class="col-sm-10">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
             <th>Naziv proizvoda</th>
             <th>Cijena proizvoda</th>
             <th>Veličina proizvoda</th>
             <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var adidas in Model)
            {
                <tr>
                    <td>@adidas.Name</td>
                    <td>@adidas.Size</td>
                    <td>@adidas.Price</td>
                </tr>
            }
        </tbody>
        </table>
    </div>
